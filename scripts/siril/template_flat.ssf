############################################
# Script for Siril
# Template for CCDciel preprocessing 
# Create master flat
############################################

requires 1.3.4
setext fits

cd $BASEDIR

#preprocess flats
cd $FLATDIR
calibrate $FLATPREFIX$FILTER_ -bias=$MASTERBIAS
#build master-flat
stack pp_$FLATPREFIX$FILTER_ rej 3 3 -norm=mul

load pp_$FLATPREFIX$FILTER_stacked.fits
save Master_Flat$FILTER.fits

close
